          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane fx:id="centerContent" disable="true" dividerPositions="0.5" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane>
               <children>
                  <BorderPane>
                     <bottom>
                        <Button mnemonicParsing="false" onAction="#doFilter" text="%doFilter" BorderPane.alignment="CENTER" />
                     </bottom>
                     <top>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label text="%entity" />
                                    <ChoiceBox fx:id="entityList" prefWidth="150.0" />
                                 </children>
                              </HBox>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label text="%filters" />
                                    <ChoiceBox fx:id="filters" prefWidth="150.0" />
                                    <Button mnemonicParsing="false" text="%addFilter" />
                                 </children></HBox>
                           </children>
                           <BorderPane.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </BorderPane.margin>
                        </VBox>
                     </top>
                     <center>
                        <VBox fx:id="filterList" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
               </children></AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="255.0" />
        </items>
      </SplitPane>
   </center>
</BorderPane>
